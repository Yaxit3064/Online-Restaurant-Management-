<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="session_view_tree" model="ir.ui.view">
            <field name="name">session.model.tree</field>
            <field name="model">session.model</field>
            <field name="arch" type="xml">
                <tree decoration-info="duration_id &lt; 9" decoration-danger="duration_id &gt; 15">
                    <field name="name" decoration-bf="1"/>
                    <field name="instructor"/>
                    <field name="course_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="active"/>
                    <field name="duration_id"/>
                    <field name="seats"/>
                    <field name="taken_seats_percent" readonly="1"/>
                </tree>
            </field>
        </record>
        <record id="session_view_form" model="ir.ui.view">
            <field name="name">session.model.form</field>
            <field name="model">session.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="course_id"/>
                                <field name="instructor"/>
                                <field name="start_date"/>
                                <field name="end_date"/>

                                <field name="active"/>
                            </group>
                            <group>
                                <field name="duration_id"/>
                                <field name="attendee_ids" widget="many2many_tags"/>
                                <field name="seats"/>
                                <field name="taken_seats_percent" widget="progressbar" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="session_view_calendar" model="ir.ui.view">
            <field name="name">session.model.calendar</field>
            <field name="model">session.model</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <calendar string="activities"
                          create="0" mode="month"
                          date_start="start_date"
                          date_stop="end_date"
                          color="name"
                          hide_time="true" event_limit="5">
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="start_date"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="session_gantt_view">
            <field name="name">session.model.gantt</field>
            <field name="model">session.model</field>
            <field name="arch" type="xml">
                <gantt string="Session Gantt"
                       date_start="start_date"
                       date_stop="end_date"
                       default_group_by="instructor">
                    <field name="name"/>
                </gantt>
            </field>
        </record>


        <record id="action_session_view" model="ir.actions.act_window">
            <field name="name">session</field>
            <field name="res_model">session.model</field>
            <field name="view_mode">tree,form,calendar,gantt</field>
            <field name="view_id" ref="session_view_tree"/>
        </record>

        <menuitem id="menu_session_root" name="openacademy" sequence="1"/>
    </data>
</odoo>